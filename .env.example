# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_GTM_ID=GTM-XXXXXXX

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_SOCIAL_SHARING=true

# App Configuration
REACT_APP_SITE_URL=https://flashcards.com
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_THEME=light
REACT_APP_MAX_CARDS_PER_DECK=1000
REACT_APP_MAX_DECKS_PER_USER=50

# Performance
REACT_APP_LAZY_LOAD_THRESHOLD=0.5
REACT_APP_IMAGE_QUALITY=80
REACT_APP_CACHE_VERSION=1.0.0

# Security
REACT_APP_CORS_ORIGIN=https://flashcards.com
REACT_APP_RECAPTCHA_SITE_KEY=your-recaptcha-key

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_MOCK_API=false

# Email Configuration
REACT_APP_EMAIL_SERVICE=sendgrid
REACT_APP_EMAIL_FROM=noreply@flashcards.com
REACT_APP_EMAIL_SUPPORT=support@flashcards.com

# Payment (if applicable)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your-stripe-key
REACT_APP_PAYMENT_ENABLED=false

# Social Media
REACT_APP_TWITTER_HANDLE=@flashcards
REACT_APP_FACEBOOK_PAGE=flashcards
REACT_APP_INSTAGRAM_HANDLE=@flashcards

# SEO
REACT_APP_SITE_NAME=Flashcards
REACT_APP_SITE_DESCRIPTION=A modern flashcard application for effective learning and memorization
REACT_APP_SITE_KEYWORDS=flashcards, study, learning, education, memorization, spaced repetition
